%div.panel.panel-default
  %div.panel-heading
    %h1= t('.title', inflections)

  %div.panel-body
    = simple_form_for(@resource, url: collection_path) do |f|
      - if @resource.errors.any?
        #error_explanation
          %h2= "#{pluralize(@resource.errors.count, "error")} prohibited this #{@resource.model_name.human(count: :one)} from being saved:"
          %ul
            - @resource.errors.full_messages.each do |msg|
              %li= msg
      = render 'form', form: f
      = f.button :submit, class: 'btn btn-success'

  %div.panel-footer
    .btn-container-right
      = link_to collection_path, class: 'btn btn-default' do
        %span.glyphicon.glyphicon-arrow-left
        = t('.back')